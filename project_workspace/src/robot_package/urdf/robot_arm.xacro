<?xml version="1.0" ?>

<robot name="robot_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- BGN - Include -->
    <xacro:include filename="$(find robot_package)/urdf/links_joints.xacro" />
    <xacro:include filename="$(find robot_package)/urdf/robot_parameters.xacro" />
    <!-- END - Include -->
    <xacro:m_link_box name="${l00}"
                origin_rpy="0 0 0" origin_xyz="0 0 0"
                mass = "1024"
                ixx="170.667" ixy="0" ixz="0" 
                iyy="170.667" iyz="0" 
                izz="170.667"
                size = "1 1 1"/>
    
    <xacro:m_joint name="${l00}__${l01}"
                   type="revolute"
                   axis_xyz="0 0 1"
                   origin_rpy="0 0 0" origin_xyz="0 0 0.5"
                   parent="${l00}"
                   child="${l01}"
                   limit_e="1000"
                   limit_l="-3.14"
                   limit_u="3.14"
                   limit_v="0.5"/>
    
    <xacro:m_link_cylinder name="${l01}"
                origin_rpy="0 0 0" origin_xyz="0 0 0.2"
                mass = "157.633"
                ixx="13.235" ixy="0" ixz="0" 
                iyy="13.235" iyz="0" 
                izz="9.655"
                radius = "0.35"
                length="0.4"/>

    <xacro:m_joint name="${l01}__${l02}"
                   type="revolute"
                   axis_xyz="0 1 0"
                   origin_rpy="0 0 0" origin_xyz="0 0 0.4"
                   parent="${l01}"
                   child="${l02}"
                   limit_e="1000"
                   limit_l="-3.14"
                   limit_u="3.14"
                   limit_v="0.5"/>

    <xacro:m_link_cylinder name="${l02}"
                origin_rpy="0 0 0" origin_xyz="0 0 0.4"
                mass = "57.906"
                ixx="12.679" ixy="0" ixz="0" 
                iyy="12.679" iyz="0" 
                izz="0.651"
                radius = "0.15"
                length="0.8"/>

    <gazebo>
        <plugin name ="gazebo_ros_control" filename="libgazebo_ros_control.so">
        </plugin>
    </gazebo>
</robot>


